---
import { Icon } from "astro-icon/components";

type Props = {
  socials: Array<{
    icon: string;
    ariaLabel: string;
    href: string;
  }>;
};

const { socials } = Astro.props;
---

<div class={`flex space-x-4 justify-center mb-8`}>
  {
    socials.map(function displaySocialIcon(info) {
      return (
        <a
          href={info.href}
          target="_blank"
          rel="noopener noreferrer"
          class="transition-transform duration-300 hover:scale-125"
          aria-label={info.ariaLabel}
        >
          <Icon name={info.icon} class="h-10 w-10" />
        </a>
      );
    })
  }
</div>
