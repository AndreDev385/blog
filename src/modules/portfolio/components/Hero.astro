---
import { Icon } from "astro-icon/components";

import SocialIcons from "@/modules/portfolio/components/SocialIcons.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const socials = [
  {
    icon: "devicon:linkedin",
    ariaLabel: "LinkedIn",
    href: "https://www.linkedin.com/in/andr%C3%A9-izarra/",
  },
  {
    icon: "devicon:github",
    ariaLabel: "GitHub",
    href: "https://github.com/AndreDev385",
  },
  {
    icon: "logos:google-gmail",
    ariaLabel: "Gmail",
    href: "mailto:andre.izarra@gmail.com",
  },
  {
    icon: "logos:whatsapp-icon",
    ariaLabel: "Whatsapp",
    href: "https://wa.me/584241756082",
  },
];
---

<!-- Hero -->
<section
  id="hero"
  class="relative flex min-h-screen items-center justify-center overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100"
>
  {/* Animated Background Elements */}
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute left-1/4 top-1/4 h-64 w-64 animate-pulse rounded-full bg-gradient-to-r from-blue-400/20 to-purple-400/20 blur-3xl"
    >
    </div>
    <div
      class="absolute right-1/4 top-3/4 h-96 w-96 animate-pulse rounded-full bg-gradient-to-r from-purple-400/20 to-indigo-400/20 blur-3xl delay-1000"
    >
    </div>
    <div
      class="absolute bottom-1/4 left-1/3 h-48 w-48 animate-pulse rounded-full bg-gradient-to-r from-indigo-400/20 to-blue-400/20 blur-3xl delay-500"
    >
    </div>
  </div>

  {/* Floating Decorative Elements */}
  <div
    class="absolute left-20 top-20 h-4 w-4 animate-bounce rounded-full bg-blue-500 delay-300"
  >
  </div>
  <div
    class="absolute right-32 top-40 h-3 w-3 animate-bounce rounded-full bg-purple-500 delay-700"
  >
  </div>
  <div
    class="absolute bottom-32 left-40 h-5 w-5 animate-bounce rounded-full bg-indigo-500 delay-1000"
  >
  </div>
  <div
    class="absolute bottom-20 right-20 h-2 w-2 animate-bounce rounded-full bg-blue-400 delay-500"
  >
  </div>

  {/* Main Content */}
  <div class="relative z-10 mx-auto max-w-6xl px-6 text-center">
    <div class="group">
      {/* Greeting */}
      <div
        class="mb-8 translate-y-8 transform animate-[fadeInUp_1s_ease-out_0.2s_forwards] opacity-0 transition-all duration-1000 ease-out"
      >
        <h2
          class="mb-2 text-3xl font-bold text-gray-700 transition-colors duration-500 group-hover:text-blue-600 md:text-4xl"
        >
          {t("hero.greet")}{" "}
          <span
            class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
          >
            Andr√© Izarra
          </span>
        </h2>
      </div>

      {/* Main Title */}
      <div
        class="mb-8 translate-y-8 transform animate-[fadeInUp_1s_ease-out_0.4s_forwards] opacity-0 transition-all duration-1000 ease-out"
      >
        <h1
          class="mb-4 bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800 bg-clip-text text-5xl font-bold leading-tight text-transparent md:text-6xl lg:text-7xl"
        >
          {t("hero.role1")}
          <br />
          <span>
            {t("hero.role2")}
            <div
              class="absolute -bottom-2 left-0 right-0 h-1 origin-center scale-x-0 transform bg-gradient-to-r from-blue-500 via-purple-500 to-indigo-500 transition-transform duration-700 group-hover:scale-x-100"
            >
            </div>
          </span>
        </h1>
      </div>

      {/* Subtitle */}
      <div
        class="mb-12 translate-y-8 transform animate-[fadeInUp_1s_ease-out_0.6s_forwards] opacity-0 transition-all duration-1000 ease-out"
      >
        <p class="text-lg font-medium text-gray-700 lg:text-xl">
          <span class="inline-flex items-center gap-2">
            <Icon name="mdi:code" class="size-6 text-blue-500" />
            Coder
          </span>
          <span class="mx-4 text-gray-400">|</span>
          <span class="inline-flex items-center gap-2">
            <Icon name="mdi:note-edit" class="size-6 text-purple-500" />
            Blogger
          </span>
          <span class="mx-4 text-gray-400">|</span>
          <span class="inline-flex items-center gap-2">
            <Icon name="mdi:google-gamepad" class="size-6 text-blue-500" />
            Game Dev Enthusiast
          </span>
        </p>
      </div>

      {/* Social Icons */}
      <SocialIcons socials={socials} />

      {
        /*<div class="mb-12 transform transition-all duration-1000 ease-out opacity-0 translate-y-8 animate-[fadeInUp_1s_ease-out_0.8s_forwards]">
            <div class="flex justify-center gap-6">
              {socialLinks.map((social, index) => (
                <a
                  key={social.name}
                  href={social.url}
                  class="group/social relative p-4 bg-white/80 backdrop-blur-sm rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 hover:-translate-y-1"
