---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const description = t("about.description").toString().split("\n\n");
const interestsTitles = t("about.interests.content");

const interests = [
  {
    icon: "mdi:web",
    color: "from-blue-500 to-cyan-500",
  },
  {
    icon: "mdi:google-gamepad",
    color: "from-purple-500 to-pink-500",
  },
  {
    icon: "mdi:note-edit",
    color: "from-green-500 to-emerald-500",
  },
  {
    icon: "mdi:school",
    color: "from-orange-500 to-red-500",
  },
  { icon: "logos:opensource", color: "from-indigo-300 to-purple-300" },
  { icon: "mdi:book", color: "from-teal-500 to-blue-500" },
].map((o, i) => ({ ...o, name: interestsTitles[i] }));

